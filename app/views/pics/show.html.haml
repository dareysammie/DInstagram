.col-md-6.col-md-offset-3
	.panel.panel-default
		.panel.heading.pic_image
			= image_tag @pic.image.url
		.panel-body

			%p= @pic.title
			
		.panel-footer
			.row
				.col-md-6
					%p= @pic.user.email
				.col-md-6
					.btn-group.pull-left
						- if user_signed_in?
							= link_to like_pic_path(@pic), method: :put, class: "btn btn-success" do
								%span.glyphicon.glyphicon-heart-empty
								=@pic.get_upvotes.size
							= link_to dislike_pic_path(@pic), method: :put, class: "btn btn-danger" do
								%span.glyphicon.glyphicon-remove-circle
								=@pic.get_downvotes.size

							.btn-group.pull-left
								= link_to "Edit", edit_pic_path, class: "btn btn-info"
								= link_to "Delete", pic_path, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger"
						- else

							= link_to "Back", root_path, class: "btn btn-info"
